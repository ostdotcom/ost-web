<!--                    <switch>-->
<!--                      <use xmlns:xlink="http://www.w3.org/1999/xlink" xlink:href="#icon-play"></use>-->
<!--                    </switch>-->
<!--                  </svg>-->
<!--                </div>-->
<!--                <span class="align-middle"></span>-->
<!--              </div>-->
              <img src="<%= ost_home_page_jumbotron[0]['jumbotron_image_mobile'] %>" srcset="<%= ost_home_page_jumbotron[0]['jumbotron_image_mobile'] %> 1100w" class="img-fluid position-relative pr-0 w-100" alt="Simple Token Play Video"/>
            </div>
          </div>
        </div>
      </div>

      </div>

    </div>
  </div>
</section>

<%end%>