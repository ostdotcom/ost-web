<%
  ost_home_page_jumbotron = (@dynamic_content.data[GlobalConstant::StaticContentFileName.ost_home_page_jumbotron]['api_response'] || []) rescue []
  if ost_home_page_jumbotron.present?
%>
<section class="container-jumbotron pt-5 d-md-none">

  <div class="container">
    <div class="row align-items-center">
      <div class="col-12">
        <h3 class="header-blue-900 midnight-blue"><%= ost_home_page_jumbotron[0]['jumbotron_title']%></h3>
        <p class="mt-3">
          <%= ost_home_page_jumbotron[0]['jumbotron_description']%>
        </p>
      </div>
      <div class="col-12">
        <div class="row">
          <div class="col-7 ">
            <div class="row">
              <% if ost_home_page_jumbotron[0]['primary_btn_enabled_flag'] == 'on' %>
                <div class="col-12 ">
                  <a href="<%= ost_home_page_jumbotron[0]['primary_btn_link'] %>" class="btn btn-primary my-2 equal-width smooth-scroll" title="<%= ost_home_page_jumbotron[0]['primary_btn_title'] %>"><%= ost_home_page_jumbotron[0]['primary_btn_title'] %></a>
                </div>
              <%end%>
              <% if ost_home_page_jumbotron[0]['sec_btn_enabled_flag'] == 'on' %>
                <div class="col-12 ">
                  <a href="<%= ost_home_page_jumbotron[0]['sec_btn_link'] %>" class="btn btn-secondary my-2 smooth-scroll" title="<%= ost_home_page_jumbotron[0]['sec_btn_title'] %>"><%= ost_home_page_jumbotron[0]['sec_btn_title'] %></a>
                </div>
              <%end%>
            </div>


          </div>
          <div class="col-5 text-center mt-3 mt-md-0 pr-0">
            <div class="illustration w-100">
<!--              <div class="btn-secondary btn btn-play" title="Watch Intro" data-toggle="modal" data-target="#helpVideoModal" data-src="<%#= ost_home_page_jumbotron[0]['jumbotron_video_link'] %>">-->
