<div class="w-100 content">
  <%if item['news_list_video_embed'] &&  ! item['news_list_article_link']%>
    <div class="video-wrapper">
      <button type="button" class="font-weight-light btn video-btn h-100 w-100" data-toggle="modal" data-src="<%=item['news_list_video_embed'] %>" data-target="#helpVideoModal">
          <span class="play-icon">
            <svg class="icon-play align-middle">
              <switch>
                <use class="icon-play" xmlns:xlink="http://www.w3.org/1999/xlink" xlink:href="#icon-play"></use>
              </switch>
            </svg>
          </span>
      </button>

      <%if item['news_list_image'] %>
        <div class="img-wrapper">
          <img class="img-fluid" src="<%=item['news_list_image'] %> " alt="image"/>
        </div>
      <%end%>
    </div>
  <%end %>

  <% if item['news_list_article_link']%>
    <div class="article-wrapper">
      <%if item['news_list_image'] %>
        <div class="img-wrapper">
          <img class="img-fluid" src=<%=item['news_list_image']%> alt="image"/>
        </div>
      <%end%>
    </div>
  <%end%>

  <%if item['news_list_title'] %>
    <div class="carousel-title">
      <%= raw(item['news_list_title']) %>
    </div>
  <%end %>

  <%if item['news_list_description']%>
    <div class="carousel-description">
      <%= raw(item['news_list_description']) %>
    </div>
  <%end%>

  <%if item['news_list_date']%>
    <div class="w-100 date-wrapper">
      <div class='date-content'>
        <div class="date-text"><%=Time.at(item['news_list_date'].to_i).strftime("%d %b %Y")%></div>
      </div>
    </div>
  <%end %>

</div>