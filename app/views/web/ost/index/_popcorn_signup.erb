<section class="container-fluid container-pop-corn">

  <div class="row justify-content-center py-6 bg-opacity">
    <div class="container">
      <h3 class="text-center">OST Wallet App</h3>
      <p class="text-center">We have built  a sample app to showcase what's possible with OST Platform.</p>
      <div class="row justify-content-center col-12 col-md-10 col-lg-8 col-xl-6 mx-auto ">
        <form class="ost-form w-100" id="home-subscribe-form">
          <div class="input-group">
            <input type="email" class="form-control home-subscribe-form py-2" autocomplete="off" name="email" id="home-subscribe-form-email" placeholder="Enter email address" >
            <button class="btn btn-primary input-group-append px-3 align-items-center d-none d-md-block text-uppercase home-subscribe-form-submit"
                    type="submit" title="TRY NOW"
                    style="margin-left: -1px; border-top-left-radius: 0; border-bottom-left-radius: 0"
                    data-jsonp="<%= GlobalConstant::Email.subscribe_url %>">
              Get OST Wallet
            </button>
          </div>
          <div class="form-group m-0 mx-auto checkbox-section mt-1" style="display : none ; ">
            <label for="subscribe_confirmation" class="label-cbx mb-0 w-100">
              <div>
                <input id="subscribe_confirmation" type="checkbox" name="subscribe_confirmation" value="1">
                <div class="checkbox">
                  <svg width="18" height="18" viewBox="0 0 20 20">
                    <path d="M3,1 L17,1 L17,1 C18.1045695,1 19,1.8954305 19,3 L19,17 L19,17 C19,18.1045695 18.1045695,19 17,19 L3,19 L3,19 C1.8954305,19 1,18.1045695 1,17 L1,3 L1,3 C1,1.8954305 1.8954305,1 3,1 Z"></path>
                    <polyline points="4 11 8 15 16 6"></polyline>
                  </svg>
                </div>
              </div>
              <span class="font-weight-normal info-text ost-nav-link">
                  I agree to receive updates on OST Wallet and other OST Products
                </span>
            </label>
            <div class="error confirmation_error" data-for="subscribe_confirmation"></div>
          </div>
          <div class="error email-error"></div>
          <button class="btn btn-primary input-group-append px-3 mx-auto align-items-center d-md-none mt-3 rounded text-uppercase home-subscribe-form-submit" type="submit" title="TRY NOW" data-jsonp="<%= GlobalConstant::Email.subscribe_url %>">
            Get OST Wallet
          </button>
          <div id="submitting-email-state" style="display:none">
            <img src="//dxwfxs8b4lg24.cloudfront.net/ost-kit/images/processed-loader-1.gif" width="15" height="15"/>
            <span class=" small-desc d-inline"> Submitting...</span>
          </div>
          <div id="subscribe-success-wallet-app" style="display: none">
            <svg class="icon d-inline align-middle" style="width:15px; height: 15px">
              <switch>
                <use xmlns:xlink="http://www.w3.org/1999/xlink" xlink:href="#success-icon-email-capture">
                </use>
              </switch>
            </svg>
            <span class="small-desc d-inline align-middle">Success! Please check your email for further details.</span>
          </div>
          <div class="error general_error"></div>

        </form>
      </div>
    </div>
  </div>

</section>