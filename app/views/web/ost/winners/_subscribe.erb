<section class="container-fluid" id="subscribe">
  <div class="row container-contact-us py-5">
    <div class="container mx-auto">
      <div class="row">
        <div class="col-12 col-md-8 mx-auto text-center">
          <h3 class="mb-3">Get the Latest Updates from OST</h3>
        </div>
      </div>
      <div class="row">

        <form class="custom-form col-11 col-md-6 col-xl-6 mx-auto text-center" id="subscribe-form">

          <div class="row">
            <div class="col-12">
              <div class="input-container">
                <input class="input" id="subscribe-form-email" placeholder="email@example.com" type="email" name="email" value="" title="Email" required autocomplete="off" />
                <span class="input-border"></span>
              </div>
              <div class="error email-error text-left" data-for="email"></div>
            </div>
          </div>

          <div class="form-group m-0">
            <label for="subscribe_confirmation" class="label-cbx mb-0 w-100">
              <input id="subscribe_confirmation" type="checkbox" name="subscribe_confirmation" value="1">
              <div class="checkbox">
                <svg width="18px" height="18px" viewBox="0 0 20 20">
                  <path d="M3,1 L17,1 L17,1 C18.1045695,1 19,1.8954305 19,3 L19,17 L19,17 C19,18.1045695 18.1045695,19 17,19 L3,19 L3,19 C1.8954305,19 1,18.1045695 1,17 L1,3 L1,3 C1,1.8954305 1.8954305,1 3,1 Z"></path>
                  <polyline points="4 11 8 15 16 6"></polyline>
                </svg>
              </div>
              <span class="font-weight-normal info-text text-left">
                I agree to receive the OST e-mail Newsletter with updates on OST products and services by
                <a href="/" class="ost-home-link">OST.COM Inc.</a> </span>
              </span>
            </label>
            <div class="error confirmation_error text-left" data-for="subscribe_confirmation"></div>
          </div>

          <%= hidden_field_tag :authenticity_token, form_authenticity_token -%>
          <button type="submit" class="btn btn-primary px-5" id="subscribe-form-submit"
                  data-jsonp="<%= GlobalConstant::PepoCampaign.subscribe_url %>">Sign up</button>
          <div class="error text-center general_error" data-for="general_error"></div>
        </form>

        <div id="subscribe-success" style="display: none">
          <span class="small-title">Almost done</span>
          <span class="small-desc">To confirm your email address, please click the link in the email we just sent you.</span>
        </div>

      </div>
    </div>
  </div>
</section>

<% content_for :head_js do %>
  <script src="https://www.google.com/recaptcha/api.js"></script>
<%end%>

<% content_for :end_js do %>
  <script>
    function kyc_recaptcha_callback() {
     $('#sign-up-form .error[data-for="recaptcha"]').text('');
    }
  </script>
<% end %>

