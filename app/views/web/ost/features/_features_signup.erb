<section class="container container-subscribe py-5" id="subscribe">
  <div class="row text-center">
    <div class="col-12 col-sm-9 col-lg-7 mx-auto">
      <div class="row">
        <div class="col-12">
          <div class="container-subscribe">
            <h2 class="font-weight-normal">Sign Up for Updates</h2>
            <form class="simpletoken-form" id="subscribe-form">
              <div class="subscribe">
                <div class="form-group mb-0">
                  <input type="email" class="form-control mt-4" id="subscribe-form-email" name="email" placeholder="email@example.com">
                  <div class="error email-error">&nbsp;</div>
                  <div class="form-group m-0 mx-auto">
                    <label for="subscribe_confirmation" class="label-cbx mb-0 w-100 text-left">
                      <div>
                        <input id="subscribe_confirmation" type="checkbox" name="subscribe_confirmation" value="1">
                        <div class="checkbox">
                          <svg width="18px" height="18px" viewBox="0 0 20 20">
                            <path d="M3,1 L17,1 L17,1 C18.1045695,1 19,1.8954305 19,3 L19,17 L19,17 C19,18.1045695 18.1045695,19 17,19 L3,19 L3,19 C1.8954305,19 1,18.1045695 1,17 L1,3 L1,3 C1,1.8954305 1.8954305,1 3,1 Z"></path>
                            <polyline points="4 11 8 15 16 6"></polyline>
                          </svg>
                        </div>
                      </div>
                      <span class="font-weight-normal info-text ost-nav-link">
                        I agree to receive the OST email newsletter with updates on OST products and services from
                        <a href="<%= GlobalConstant::Base.root_url %>">OST.COM Inc.</a></span>
                    </label>
                    <div class="confirmation_error error" data-for="subscribe_confirmation"></div>
                  </div>
                  <button type="submit" title="Sign Up" class="btn btn-primary px-5" id="subscribe-form-submit" data-jsonp="<%= GlobalConstant::PepoCampaign.subscribe_url %>">Sign up</button>
                  <div class="general_error error"></div>
                </div>
              </div>
            </form>
            <div id="subscribe-success" style="display: none">
              <span class="small-title">Almost done</span>
              <span class="small-desc">To confirm your email address, please click the link in the email we just sent you.</span>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>