                    <div class="participants-carousel">
                      <% data[:participants].each_with_index do |data, index| %>
                        <div class="item">
                          <div class="participants-title text-truncate"><%= data[:title]%></div>
                          <small class="font-weight-light"><%= data[:type]%></small>
                        </div>
                      <%end%>
                    </div>
                  </div>
                <%end%>
              </div>
            </div>
          </div>
        </div>
