<section class="container-fluid bg-blue position-relative" id="subscribe">
  <div class="row container-contact-us forward-angled-edge py-5">
    <div class="container mx-auto">
      <div class="row">
        <div class="col-12 mx-auto text-center">
          <h3 class="mb-5">Sign Up for OST Alpha IV</h3>
        </div>
      </div>
      <div class="row">
        <form data-ost-formhelper
              action="/api/home/alpha/4/signup" method="GET"
              class="custom-form col-11 col-md-6 col-xl-6 mx-auto"
              id="alpha-winners-form">

          <div class="row">
            <div class="col-12 col-md-6">
              <div class="input-container form-group">
                <label>FIRST NAME</label>
                <input class="input form-control" id="first_name" type="text" name="first_name" value="" title="First Name"
                       required autocomplete="off" />
                <div class="invalid-feedback error" data-forname="first_name"></div>
              </div>
            </div>
            <div class="col-12 col-md-6">
              <div class="input-container form-group">
                <label>LAST NAME</label>
                <input type="text" id="last_name" class="input form-control" name="last_name" title="Last Name" autocomplete="off" required/>
                <div class="invalid-feedback error" data-forname="last_name"></div>
              </div>
            </div>
          </div>

          <div class="input-container form-group">
            <label>EMAIL ADDRESS</label>
            <input class="input form-control" id="email" type="email" name="email" value="" title="Email Address" required autocomplete="off" />
            <div class="invalid-feedback error" data-forname="email"></div>
          </div>

          <div class="input-container form-group">
            <label>COMPANY NAME / PROJECT NAME</label>
            <input class="input form-control" id="company_name" type="text" name="company_name" value="" title="Company Name" required autocomplete="off" />
            <div class="invalid-feedback error" data-forname="company_name"></div>
          </div>

          <div class="input-container form-group mb-0">
            <label class="mb-0 d-block">SHORT PROJECT DESCRIPTION & COMMENTS</label>
            <div class="info-text mb-3">If you have an idea about what you would like to demonstrate, let us know below.</div>
            <textarea class="w-100" id="project_description" name="project_description"
                      title="Short project description & comments" style="resize:none" rows="4" cols="50" required></textarea>
            <div class="invalid-feedback error" data-forname="project_description"></div>
          </div>

          <div class="input-container form-group m-0">
            <label for="ost_product_communicate" class="label-cbx mb-0">
              <input class="input form-control" id="ost_product_communicate" data-msg-required="Please select the checkbox to continue" type="checkbox" name="ost_product_communicate" required value="1">
              <div class="checkbox">
                <svg width="18px" height="18px" viewBox="0 0 20 20">
                  <path d="M3,1 L17,1 L17,1 C18.1045695,1 19,1.8954305 19,3 L19,17 L19,17 C19,18.1045695 18.1045695,19 17,19 L3,19 L3,19 C1.8954305,19 1,18.1045695 1,17 L1,3 L1,3 C1,1.8954305 1.8954305,1 3,1 Z"></path>
                  <polyline points="4 11 8 15 16 6"></polyline>
                </svg>
              </div>
              <span class="font-weight-normal info-text">I agree to OST contacting me about OST KIT Alpha III, as described in the <a href="<%= GlobalConstant::Base.company_other_product_urls['root_url'] %>privacy" class="terms-link" title="Privacy Policy" target="_blank">Privacy Policy</a>.</span>
            </label>
            <div class="invalid-feedback" data-forname="ost_product_communicate"></div>
          </div>

          <div class="input-container form-group mb-3">
            <label for="kit_marketing" class="label-cbx mb-0">
              <input class="input form-control" id="kit_marketing" type="checkbox" name="kit_marketing" value="1">
              <div class="checkbox">
                <svg width="18px" height="18px" viewBox="0 0 20 20">
                  <path d="M3,1 L17,1 L17,1 C18.1045695,1 19,1.8954305 19,3 L19,17 L19,17 C19,18.1045695 18.1045695,19 17,19 L3,19 L3,19 C1.8954305,19 1,18.1045695 1,17 L1,3 L1,3 C1,1.8954305 1.8954305,1 3,1 Z"></path>
                  <polyline points="4 11 8 15 16 6"></polyline>
                </svg>
              </div>
              <span class="font-weight-normal info-text">I agree to OST sending me marketing communications, as described in the <a href="<%= GlobalConstant::Base.company_other_product_urls['root_url'] %>privacy" class="terms-link" title="Privacy Policy" target="_blank">Privacy Policy</a>.</span>
            </label>
          </div>

          <%= hidden_field_tag :authenticity_token, form_authenticity_token -%>
          <div class="form-group mb-0 form-recapcha">
            <div class="g-recaptcha form-recapcha-wrap" data-sitekey="<%= GlobalConstant::Base.recaptcha['site_key'] %>"></div>
            <div class="error" data-forid="recaptcha" style="text-align: center"></div>
          </div>
          <button data-submiting="Submitting..." type="submit" class="btn btn-primary mt-4 d-block" id="alpha-winners-submit" style="margin: 0 auto;width: 150px" title="Sign Up">Sign Up</button>
          <div class="invalid-feedback general_error text-center"></div>
        </form>

      </div>
    </div>
  </div>
</section>

<% content_for :head_js do %>
  <script src="https://www.google.com/recaptcha/api.js"></script>
<%end%>

<% content_for :end_js do %>
  <div id="successModal" class="modal fade user-modal" role="dialog" tabindex="-1">
    <div class="modal-dialog modal-dialog-centered modal-lg h-100 mx-auto my-0">
      <div class="modal-content rounded-0">
        <div class="modal-body text-center py-4">
          <svg class="icon" style="width:50px; height: 50px">
            <switch>
              <use xmlns:xlink="http://www.w3.org/1999/xlink" xlink:href="#success-icon">
              </use>
            </switch>
          </svg>
          <h5>Thank you for signing up.</h5>
          <h5>We will inform you know as soon as OST KIT‚ç∫ Phase III is open for applications!</h5>
          <button class="btn btn-primary mt-4" title="Close" data-dismiss="modal">Close</button>
        </div>
      </div>
    </div>
  </div>
<% end %>

